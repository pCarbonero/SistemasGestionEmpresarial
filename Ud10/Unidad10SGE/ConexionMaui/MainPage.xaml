<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConexionMaui.ViewModels"
             x:Class="ConexionMaui.MainPage">
    <ContentPage.BindingContext>
        <vm:ConectarVM/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <ListView ItemsSource="{Binding listadoPersonas}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Padding="10">
                                <!-- Mostrar Nombre y Apellidos -->
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="Medium" />
                                <Label Text="{Binding Apellidos}" FontSize="Small" />

                                <!-- Mostrar Teléfono -->
                                <Label Text="{Binding Telefono}" FontSize="Small" TextColor="Gray" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
